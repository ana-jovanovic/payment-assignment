@model IList<PaymentAssignement.Models.Transaction>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@(Html.BeginForm("PayTransaction", "Transactions"))
{
@if (Model != null && Model.Any())
{
    <table class="table">
        <tr>
            <th>
                Transaction Date
            </th>
            <th>
                Amount
            </th>
            <th>
                Account Name
            </th>
            <th>
                Consultant Name
            </th>
            <th>
                Project Name
            </th>
            <th>
                Vendor Name
            </th>
            <th>
            </th>
        </tr>

        @foreach (var transaction in Model)
        {
            @Html.HiddenFor(m => transaction.Id)
            @Html.HiddenFor(m => transaction.AccountId)
            <tr>
                <td>
                    @Html.DisplayFor(m => transaction.Date)
                </td>
                <td>
                    @Html.DisplayFor(m => transaction.Amount)
                </td>
                <td>
                    @Html.DisplayFor(m => transaction.AccountName)
                </td>
                <td>
                    @Html.DisplayFor(m => transaction.ConsultantName)
                </td>
                <td>
                    @Html.DisplayFor(m => transaction.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(m => transaction.VendorName)
                </td>
                <td>
                    <button type="submit" class="btn btn-primary">Pay transaction</button>
                </td>
            </tr>
        }
    </table>
}
}
